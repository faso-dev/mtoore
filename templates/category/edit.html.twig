{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} Edition of category {{ category.title }}
{% endblock %}

{% block body %}
    <div class="col">
        <div class="card">
            <div class="card-header bg-dark text-white text-center p-4">
                <div class="float-left">
                    <a class="btn btn-dark barka-bg" href="{{ path('category_index') }}"><i class="fa fa-arrow-left"></i> Back</a>
                </div>
                <h3>Edition of #{{ category.title }}</h3>
            </div>
            <div class="card-body">
                {{ include('category/_form.html.twig', {'button_label': 'Edit'}) }}            </div>
        </div>
    </div>
{% endblock %}
