{% if not app.request.attributes.get('_route', null) is same as('app_login') %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('dashboard') }}">
            MTOORE
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item ">
                    <a class="nav-link {{ active_route('dashboard') }}"
                       href="{{ path('dashboard') }}">
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ active_route(['category_index', 'category_new', 'category_edit']) }}"
                       href="{{ path('category_index') }}">
                        Categories
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link {{ active_route(['tutorial_index', 'tutorial_new', 'tutorial_edit']) }}"
                       href="{{ path('tutorial_index') }}">
                        Tutoriels
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link {{ active_route(['get_started']) }}"
                       href="{{ path('get_started') }}">
                        ABout
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link {{ active_route(['get_started']) }}"
                       href="{{ path('persist_menu') }}">
                        Update tutorial menu
                    </a>
                </li>
            </ul>
            <ul class="navbar-nav mr-5">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item dropdown mr-5">
                        <a class="nav-link dropdown-toggle"
                           data-toggle="dropdown" href="#" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            {{ app.user.username | upper }}
                        </a>
                        <div class="dropdown-menu" style="margin-right: 100px;">
                            <a class="dropdown-item" href="{{ path('app_logout') }}">
                                Deconnexion
                            </a>
                        </div>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>

{% endif %}